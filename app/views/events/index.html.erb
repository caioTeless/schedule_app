<%# <div id="alert" class="alert alert-success alert-dismissible fade show" role="alert" >
  {{ alertTitle }}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div> %>

<div class="container">
    <div class="d-flex flex-row-reverse">
        <p class="p-3"> | <%= link_to "Logout", logout_path, method: :delete %></p>
        <p id="username" class="p-3"><%= @current_user_username.upcase %></p> 
        <div id="userId" style="display: none;"><%= @current_user_id %></div>
    </div>
    <div id="calendar"></div>

</div>

<div id="confirmModal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">{{ modalTitle }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>{{ modalMessage }} - <strong><%= @current_user_username.upcase %></strong> ?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
        <button id="confirmModalButton" type="button" data-user-id="<%= @current_user_id %>" class="btn btn-primary">Salvar</button>
      </div>
    </div>
  </div>
</div>
