<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="col-10 col-md-8 col-lg-6">
        <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-secondary rounded", local: true) do |form| %>
            <div>
                <%= form.label :email %>
                <%= form.email_field :email, class: "form-control shadow rounded" %>
            </div>
            
            <div class="mt-3 p-3">
                <%= form.submit "Login", class: "btn btn-outline-light btn-lg" %>
                <%= link_to 'Cadastrar', login_path, class: "btn btn-outline-light btn-lg" %>
            </div>
        <% end %>
    </div>
</div>
