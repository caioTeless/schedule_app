<div class="container p-5">
    <table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
        <tr>
        <th>Nome</th>
        <th>Sobrenome</th>
        <th>E-mail</th>
        <th>Ativo</th>
        <th></th>
        <th></th>
        <th></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr> 
                <td>
                    <%= user.first_name %>
                </td>
                <td>
                    <%= user.last_name %>
                </td>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <%= user.active? ? "Sim" : "Não" %>
                </td>
                <td>
                    <%= link_to "Editar", edit_user_path(user) %>
                </td>
            </tr>
        <% end %>
    </tbody>
    </table>
    <div class="d-grid gap-2 col-6 mx-auto mt-3">
        <%= link_to "Sala de reunião", events_path, class:"btn btn-outline-info btn-lg"%>
    </div>
</div>